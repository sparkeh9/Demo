@model bool
@{
    ViewData[ "Title" ] = "Upload a thing";
}
<div class="row">
    <div class="col-md-3">
        <h2>Upload</h2>
    </div>
    <div class="col-md-3">
        @if ( Model )
        {
            <h3>Uploaded</h3>
        }

        <form method="POST" class="form-horizontal" role="form" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <label>File</label>
                        <input type="file" name="file"/>
                    </div>
                </div>
            </div>
            <input type="submit"/>
        </form>
    </div>
</div>